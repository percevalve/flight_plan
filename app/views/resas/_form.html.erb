<%= form_for(@resa) do |f| %>
  <% if @resa.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@resa.errors.count, "error") %> prohibited this resa from being saved:</h2>

      <ul>
      <% @resa.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="row">
  <div class="large-6 columns">    
    <div class="field">
    <%= f.label :nom %><br>
    <%= f.text_area :nom %>
    </div>
</div>
 <div class="large-2 columns">
  <div class="field">
    <%= f.label "Téléphone" %><br>
    <%= f.text_field :telephone %>
  </div>
</div>
<div class="large-2 columns">
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
</div>
<div class="large-1 columns">
    <div class="field">
    <%= f.label "Adulte" %><br>
    <%= f.number_field :paxa %>
  </div>
  </div>
  <div class="large-1 columns">
  <div class="field">
    <%= f.label "Enfant" %><br>
    <%= f.number_field :paxe %>
  </div>
  </div>
</div>
<div class="row">
  <div class="large-2 columns">
    <div class="field">
      <%= f.label "Statut du Check-In" %><br>
      <%= f.text_field :check_in_status %>
    </div>
  </div>
  <div class="large-2 columns">
  <div class="field">
    <%= f.label "Date demandée" %><br>
    <%= f.text_field :demand,class: "modelname_due_date",value: @resa.demand %>
  </div>
</div>
<div class="large-2 columns">
  <div class="field">
    <%= f.label "Heure demandée" %><br>
    <%= f.text_field :heure_demand, class: "modelname_time_demand" %>
  </div>
</div>
<div class="large-3 columns">
    <div class="field">
    <%= f.label "Type de vol" %><br>
    <%= f.collection_select :flight_time_id, FlightTime.order(:flight), :id, :name_with_flight_time, include_blank: true %>
  </div>
</div>

<div class="field">
  <div class="large-3 columns">
    <%= f.label "Référence de vol" %><br>
    <%= f.collection_select :flight_id, @available_flights, :id, :name_with_details, include_blank: true %>
  </div>
</div>
</div>

<div class="row">
  <div class="large-12 columns">
    <div class="field">
    <%= f.label :observation %><br>
    <%= f.text_area :observation %>
  </div>
</div>

<div class="row">
  <div class="large-12 columns">
  <div class="actions">
    <%= f.submit %>
  </div>
  </div>
</div>
<% end %>
